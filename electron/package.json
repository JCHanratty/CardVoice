{
  "name": "cardvoice",
  "version": "1.3.0",
  "description": "Voice-powered sports card collection manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder --win",
    "rebuild-sqlite": "npx @electron/rebuild -f -w better-sqlite3 -m ../server"
  },
  "build": {
    "appId": "com.cardvoice.app",
    "productName": "CardVoice",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "../server",
        "to": "server",
        "filter": ["**/*", "!tests/**", "!*.db", "!*.db-journal", "!*.db-wal", "!.env"]
      },
      {
        "from": "../frontend/dist",
        "to": "frontend/dist"
      },
      {
        "from": "resources/checklist-catalog.db",
        "to": "checklist-catalog.db"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "artifactName": "CardVoice.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "JCHanratty",
      "repo": "CardVoice"
    }
  },
  "dependencies": {
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "@electron/rebuild": "^3.6.0",
    "cross-env": "^7.0.3"
  }
}
